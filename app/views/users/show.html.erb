
<div class="center">
    <div class="container-fluid well">
      <div class="left">
        <div class="row-fluid">
              <div class="span2" >
                <%= image_tag gravatar_url(current_user.email, 128), class:"img-circle"%>
                </div>

                <div class="span8">
                    <h3> <%= @user.name %> <%= @user.lastname %></h3>
                    <h6>Email:  <%= @user.email %></h6>
                    <h6>Ubicacion: Chile</h6>
                </div>
            </div>
          <%= link_to 'Edit', edit_user_registration_path(@user) %> |
          <%= link_to 'Back', :back %><br><br>
          <%= link_to "Crear Nuevo Proyecto", new_project_path %>
        </div>
        <div class="right">
            <h3>Mis proyectos </h3><br>
          <% if @user.projects.any? %>
            <table class="table">
              <thead>
                <tr>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @user.projects.each do |project| %>
                  <tr>
                    <td><%= project.name %></td>
                    <td><%= link_to 'Ver', project %></td>
                    <td><%= link_to 'Editar', edit_project_path %></td>
                    <% if false %>
                    <td><%= link_to 'Eliminar', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <% else%>
            <p>No has creado proyectos todav√≠a</p>
            <% end %>
            <br>
          </div>

    </div>
