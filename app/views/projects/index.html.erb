<div >
  <p id="notice"><%= notice %></p>
  
  <h1>Todos los proyectos</h1>
  
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="th">Nombre</th>
        <th>Creado Por</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.user.email %></td>
          <td><%= link_to 'Ver Detalles', project %></td>
  
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  <div class="center">
    <% if user_signed_in?%>
      <%= link_to 'Crear nuevo proyecto', new_project_path %>
    <%end%>
  </div>
  </div>