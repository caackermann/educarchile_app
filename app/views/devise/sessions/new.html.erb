<div class="wrapper">
  <div class="login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h1 class="form-signin-heading">Iniciar Sesión</h1>  
  <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email , class:'form-control',placeholder: "E-Mail", autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: 'form-control', placeholder: "Contraseña", autocomplete: "off" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field">
          <%= f.label :remember_me, class:"checkbox" do %>
           <%= f.check_box :remember_me  %>Recordar Sesión
          <% end %> 
          <br>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-lg btn-custom btn-block"%>
    </div>
  <% end %>
  
  <h2>No tienes una cuenta? <%= link_to "Crear cuenta", new_user_registration_path%></h2>>
  </div>
  
  