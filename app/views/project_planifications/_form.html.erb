<%= simple_form_for([@project, @project.build_project_planification]) do |form| %>
  <%= form.error_notification %>

  <div class="form-inputs">
    <%= form.label :place, "¿Dónde se va a implementar?" %><br>
    <%= form.text_area :place %>
  </div>
<br>
  <h4>Periodo de implementación</h4>

  <div class="form-inputs">
    <%= form.label :startdate, "Fecha de inicio" %><br>
    <%= form.date_select :startdate %>
  </div>

  <div class="form-inputs">
    <%= form.label :finishdate, "Fecha de término" %><br>
    <%= form.date_select :finishdate %>
  </div>
<br>
  <h4>Recursos Físicos y Financieros</h4>

  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Item</th>
        <th>Disponible </th>
        <th>¿Cómo podemos obtener los recursos?</th>
      </tr>
    </thead>

    <tbody class ="project_resources">
      <%= form.simple_fields_for :project_resources do |builder| %>
      <%= render 'project_resource_fields', f: builder %>
      <% end %>
    </tbody>
  </table>

  <div class="form-actions">
    <%= link_to_add_association 'Agregar Recurso', form, :project_resources, class: 'btn btn-primary', data: { association_insertion_node: '.project_resources', association_insertion_method: :append } %>
  </div>

  <h3>Otras condiciones necesarias <br> (autorizaciones, ajuste de horarios, disponibilidad de espacios, entre otros)</h3>

  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Item</th>
        <th>¿Cómo podemos obtener los recursos?</th>
      </tr>
    </thead>

    <tbody class ="project_conditions">
      <%= form.simple_fields_for :project_conditions do |builder| %>
      <%= render 'project_condition_fields',f: builder %>
      <% end %>
    </tbody>
  </table>

  <div class="form-actions">
    <%= link_to_add_association 'Agregar Recurso', form, :project_conditions, class: 'btn btn-primary', data: { association_insertion_node: '.project_conditions', association_insertion_method: :append } %>
  </div>





<div class="form-actions">
    <%= form.button :submit, "Siguiente" %>

</div>

<% end %>
