<div class="center">
<%= simple_form_for([@project, @project.project_connection])  do |form|%>

  <div class="field">
    <div class="text-left">
    <%= form.label :needs, "Tras la revisión del material presentado ¿qué
      necesidades, problemas o desafíos de tu escuela puede(n) ayudar a
      solucionar la(s) metodología(s) revisada(s)?" %></div>
    <%= form.text_area :needs, id: :project_connection_needs, size: "150x5", placeholder: "Escribe tu respuesta acá..." %>

  </div>
  <br>
  <p class="text-left"><strong> Escoja una metodología y lleve a cabo su evaluación</strong> </p>
    <table class='table'>
      <thead>
        <tr>
          <th>Metodología a evaluar</th>
          <th>Comentarios</th>
          <th>Utilidad</th>
          <th>Pertinencia</th>
          <th>Relevancia</th>
          <th></th>
        </tr>
      </thead>
      <tbody class='methodology_evaluations'>
        <%= form.simple_fields_for :methodology_evaluations do |builder| %>
          <%= render 'methodology_evaluation_fields', f: builder %>
        <% end %>
      </tbody>
    </table>
    <div class="actions">
      <%= link_to_add_association 'Evaluar otra metodología', form, :methodology_evaluations, class: 'btn btn-success add_fields', data: { association_insertion_node: '.methodology_evaluations', association_insertion_method: :append } %>
    </div>
  <br>

  <div class="field">
    <div class="text-left">
    <%= form.label "Con lo visto hasta el momento, ¿Qué ideas te surgen?,
¿qué acciones crees que podrías realizar?" %></div>
    <br>
    <%= form.text_area :ideas, id: :project_connection_ideas, size: "150x3", placeholder: "Escribe tu respuesta acá" %>
  </div>

  <br>
  <div class="actions">
    <%= form.submit "Actualizar", class:"btn btn-lg btn-custom"%>
  </div>
<% end %>
<tr>
</div>
