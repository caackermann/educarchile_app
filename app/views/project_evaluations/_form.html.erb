<%= simple_form_for([@project, @project.build_project_evaluation])  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <h4>PASO 1. CONECTAR</h4>
    <div class="field">
      <%= f.label :q_connect, "¿Lograste conectar las metodologías
      con las necesidades y desafíos de
      tu escuela?, ¿en qué se notó?" %><br>
      <%= f.text_area :q_connect, id: :project_evaluation_q_connect %>
    </div>
    <h4>PASO 2. ELEGIR</h4>
    <div class="field">
      <%= f.label :q_choose, "¿La decisión respondió a las necesidades de
tu contexto?" %><br>
      <%= f.text_area :q_choose, id: :project_evaluation_q_choose %>
    </div>
    <h4>PASO 3. PLANIFICAR</h4>
    <div class="field">
      <%= f.label :q_plan, "¿La planificación fue clara y comprensiva en cuanto a los recursos, tiempos y
responsables que se requerían? Describe logros y espacios a mejorar. " %><br>
      <%= f.text_area :q_plan, id: :project_evaluation_q_plan %>
    </div>
    <h4>PASO 4. IMPLEMENTAR</h4>
    <div class="field">
      <%= f.label :q_implement1, "¿Qué funcionó?" %><br>
      <%= f.text_area :q_implement1, id: :project_evaluation_q_implement1 %>
    </div>
    <div class="field">
      <%= f.label :q_implement2, "¿Qué puede mejorar? " %><br>
      <%= f.text_area :q_implement2, id: :project_evaluation_q_implement2 %>
    </div>
    <div class="field">
      <%= f.label :q_implement3, "¿Escalaremos la experiencia?" %><br>
      <%= f.text_area :q_implement3, id: :project_evaluation_q_implement3 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
